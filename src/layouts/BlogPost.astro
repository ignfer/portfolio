---
import Layout from './Layout.astro';
import Header from "../components/header.astro";

export interface Props {
	title: string;
	description: string;
	pubDate: Date;
	author?: string;
	image?: string;
	tags?: string[];
	slug: string;
}

const {title, description, pubDate, author, image, tags, slug} = Astro.props;
---
<Layout>
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <article>
      <header class="mb-8">
        <h1 class="text-4xl font-bold mb-4">{title}</h1>
        <div class="flex items-center gap-4 text-stone-600 mb-4">
          <time>
						{pubDate}
          </time>
					{author && <span>Por {author}</span>}
        </div>

				{tags && (
                <div class="flex flex-wrap gap-2">
									{tags.map((tag) => (
                          <span class="bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded">
                {tag}
              </span>
									))}
                </div>
				)}
      </header>

      <div class="prose prose-lg max-w-none text-stone-900">
        <slot/>
      </div>
    </article>
  </main>
</Layout>