---
import Layout from './Layout.astro';
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";

export interface Props {
	title: string;
	description: string;
	lastModified: string;
	author?: string;
	image?: string;
	tags?: string[];
	slug: string;
}

const {
  title,
  description,
  lastModified,
  author,
  image,
  tags,
  slug
} = Astro.props;
---

<Layout>
  <Header/>
  <main class="flex-grow container mx-auto px-4 py-8 max-w-4xl">
    <article>
      <button id="post-go-back" class="sticky top-18 font-space bg-linear-to-t from-stone-100 to-stone-200 border border-stone-200 p-2 rounded-md cursor-pointer text-stone-500">
        ‚Üê go back
      </button>
      <div class="font-inter prose prose-md max-w-none text-stone-900">
        <slot/>
      </div>
    </article>
  </main>
  <Footer/>
  <script>
    import {navigate} from "astro:transitions/client";
  const btn = document.getElementById('post-go-back');
  if(btn){
    btn.addEventListener('click', () => {
      navigate('/blog');
    })
  }
  </script>
</Layout>