---
import '@styles/global.css';
import '@styles/utilites.css';

const title = "Ignacio Fern√°ndez | Software Engineer & Designer";
const description = "I'm Ignacio, a fullstack developer with a focus on modern, sober and intuitive frontend design.";
const url = "https://ignfer.com/";
const image = "https://ignfer.com/og-banner-1200-630.png";
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width"/>
  <link rel="icon" type="image/svg+xml" href="/favicon.ico"/>
  <meta name="generator" content={Astro.generator}/>
  <link rel="canonical" href="https://ignfer.com/home/" />
  <title>{title}</title>
  <meta name="description" content={description} />

  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={image} />
  <meta property="og:url" content={url} />
  <meta property="og:type" content="website" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={image} />

  <script>
		import '@assets/scripts/lenis-smooth-scroll';
    import '@assets/scripts/shortcuts';
  </script>
</head>
<body class="h-screen flex flex-col">
  <slot/>
</body>
</html>
