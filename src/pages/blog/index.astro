---
import Layout from "../../layouts/Layout.astro";
import {getCollection} from "astro:content";

const allPosts = await getCollection('blog');
---
<Layout>
  <div class="w-full h-full flex flex-col items-center p-8">
    <div class="flex flex-col gap-4">
			{allPosts.map((post) => (
              <div class="p-4 rounded-xs border border-stone-500 flex flex-col gap-2">
                <h2 class="text-stone-900 font-bold"><a href={`/blog/${post.slug}`}>{post.data.title}</a></h2>
                <hr class=" border-stone-300">
                <p class="text-stone-600 italic">{post.data.description}</p>
              </div>
			))}
    </div>
  </div>
</Layout>